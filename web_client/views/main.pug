head
  link( href="https://fonts.googleapis.com/css?family=Lato|Roboto" rel="stylesheet" )
  style.
    body {
      margin: 0;
      font-family: "Roboto", sans-serif;
      height: 100vh;
    }
    ul {
      padding-left: 15px;
      border-left: 10px #1f272f solid;
      box-shadow: 3px 0px 0px 0px #00c99f inset;
      border-radius: 2px;
      margin: 20px;
    }
    li {
      list-style:none;
      background-image:none;
      background-repeat:none;
      background-position:0;
    }
    a {
      text-decoration: none;
      color: #1f272f;
    }
    a div {
      background: #00c99f;
      font-size: 18px;
      border-radius: 2px;
      width: 400px;
      display: flex;
      justify-content: space-between;
      padding: 0;
      margin: 20px 10px;
    }
    a div p {
      padding: 10px;
      margin: 0;
    }
    header {
      width: 100vw;
      margin: 0;
      padding: 10px 0;
      display: flex;
      justify-content: center;
      align-items: center;
      color: #d3d3d3;
      background: #1f272f;
      font-family: "Lato", sans-serif;
      text-align: center;
    }
    main {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    svg {
      padding-right: 10px;
    }
